{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "suppressExcessPropertyErrors": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["."],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}
